{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Death Cases in year 2017",
  "width": 800,
  "height": 600,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/lyeetong/FIT3179asgn2/main/data.csv"
        },
        "key": "Countries",
        "fields": ["Smoking", "Alcohol use", "Unsafe sex"]
      }
    },
    {
      "calculate": "datum.Smoking+datum['Alcohol use']+datum['Unsafe sex']",
      "as": "Total Death Cases"
    }
  ],
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "Smoking",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [200, 2000, 20000, 200000, 2000000],
        "range": [
          "#FEF857",
          "#FDD400",
          "#FF9205",
          "#CE5501",
          "#9A4D00",
          "#4A2C2C"
        ]
      },
      "legend": {"orient": "bottom-right", "direction": "horizontal"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Smoking", "type": "quantitative"},
      {"field": "Alcohol use", "type": "quantitative"},
      {"field": "Unsafe sex", "type": "quantitative"}
    ]
  },
  "config": {}
}